<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (2/255, 10/255, 24/255, 1)



<CalculatorWidget>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_box
            text: "0"
            font_size: 43
            multiline: False
            halign: "right"
            size_hint: (1, 0.23)
            background_color: (20/255, 20/255, 30/255, 1)
            foreground_color: (1, 1, 1, 1)
            
        
            

        GridLayout:
            cols: 6
            rows: 6

            ### Row 1 ####
            Button:
                text: "%"
                font_size: 32
                on_press: root.sings("%")

            Button:
                text: "C"
                font_size: 32
                on_press: root.clear()

            Button:
                text: u"\u00AB"
                font_size: 32
                on_press: root.remove_last()

            Button:
                text: "/"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.sings("/")

            Button:
                text: "tg"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.tang("tg")
            
            Button:
                text: "arctg"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.ctang()

            #### Row 2 #####
            Button:
                text: "7"
                font_size: 32
                on_press: root.button_value(7)

            Button:
                text: "8"
                font_size: 32
                on_press: root.button_value(8)

            Button:
                text: "9"
                font_size: 32
                on_press: root.button_value(9)

            Button:
                text: "x"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.sings("*")
            
            Button:
                text: "ctg"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.ctang()

            Button:
                text: "arcctg"
                font_size: 20
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.arcctg()

            #### Row 3 ###
            Button:
                text: "4"
                font_size: 32
                on_press: root.button_value(4)

            Button:
                text: "5"
                font_size: 32
                on_press: root.button_value(5)

            Button:
                text: "6"
                font_size: 32
                on_press: root.button_value(6)

            Button:
                text: "-"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.sings("-")
            
            Button:
                text: "sin"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.sin()
            
            Button:
                text: "arcsin"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.arsin()

            ### Row 4 ###
            Button:
                text: "1"
                font_size: 32
                on_press: root.button_value(1)

            Button:
                text: "2"
                font_size: 32
                on_press: root.button_value(2)

            Button:
                text: "3"
                font_size: 32
                on_press: root.button_value(3)

            Button:
                text: "+"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.sings("+")
            
            Button:
                text: "cos"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.cos()

            Button:
                text: "arccos"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.arcos()

            ### Row 5 ###
            Button:
                text: "+/-"
                font_size: 32
                on_press: root.positive_negative()

            Button:
                text: "0"
                font_size: 32
                on_press: root.button_value(0)

            Button:
                text: "."
                font_size: 32
                on_press: root.dot()

            Button:
                text: "="
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.results()
            
            Button:
                text: "log"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.log()

            Button:
                text: "âˆš"
                font_size: 32
                background_color: (14/255, 73/255, 176/255, 1)
                on_press: root.rad()
        
        Button:
            text: "Classic"
            font_size: 20
            background_color: (14/255, 73/255, 176/255, 1)
            on_press: root.drop()
            size_hint: (1, 0.19)
            

            

    
            
            